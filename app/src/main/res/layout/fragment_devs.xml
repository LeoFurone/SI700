<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.slideshow.SlideshowFragment">
    <?xml version="1.0" encoding="utf-8"?>

        <ImageView
            android:id="@+id/imageViewLeo"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:paddingTop="25dp"
            android:text="@string/FotoLeo"
            android:src="@drawable/leo_furone"
            />

        <TextView
            android:id="@+id/TextViewLeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/descriLeo"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"/>

        <ImageView
            android:id="@+id/imageViewVe"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:paddingTop="25dp"
            android:contentDescription="Foto de Verussa De Alencar"
            android:text="@string/FotoVe"
            android:src="@drawable/ve_alencar"
            />

        <TextView
            android:id="@+id/TextViewVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/descriVe"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"/>


    </LinearLayout>